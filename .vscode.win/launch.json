{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run hello",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/hello/hello.exe",
            "args": [
                "biel.png"
            ],
            "cwd": "${workspaceFolder}/hello",
            "preLaunchTask": "build-all",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for GDB",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
    ]
}